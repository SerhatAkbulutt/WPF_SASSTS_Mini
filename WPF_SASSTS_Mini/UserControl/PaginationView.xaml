<UserControl x:Class="PaginationView" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="500">
    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
        <dx:SimpleButton x:Name="BtnDirect" Content="Git" CornerRadius="3" Width="44" Height="32" Margin="4"/>
        <TextBox x:Name="txtCurrentPage" Height="32" MinWidth="50" Text="{Binding DirectPageCurrent}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,40,0"/>
        <dx:SimpleButton x:Name="btnNext" Content="İleri" CornerRadius="3" Width="44" Height="32"/>
        <StackPanel x:Name="stkPanel" Margin="4" FlowDirection="LeftToRight" Orientation="Horizontal">
        </StackPanel>
        <dx:SimpleButton x:Name="btnPrev" Content="Geri" CornerRadius="3" Width="44" Height="32" Margin="4"/>
    </StackPanel>
</UserControl>
